@model IEnumerable<WebShop10.Models.ProductCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-productId="@ViewBag.ProductId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Product title</th>
            <th>Category title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Id</td>
            <td>@item.ProductTitle</td>
            <td>@item.CategoryTitle</td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" asp-route-productId="@ViewBag.ProductId">Edit</a> |
                    @* <a asp-action="Details" asp-route-id="@item.Id" asp-route-productId="@ViewBag.ProductId">Details</a> |*@
                    <a asp-action="Delete" asp-route-id="@item.Id" asp-route-productId="@ViewBag.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a asp-controller="Product" asp-action="Index">Back to Products</a>
